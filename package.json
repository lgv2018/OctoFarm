{
  "name": "octofarm",
  "version": "1.1.5",
  "description": "OctoFarm is a easy to setup and install web interface that unifies your Octoprint instances for easy monitoring of all your printers. OctoFarm allows you to connect to multiple octoprint instances on your network allowing creating a farm management system. You can control, manage, upload files to any of your instances without ever leaving the tab it's open in.",
  "main": "app.js",
  "scripts": {
    "start": "pm2 start app.js --name OctoFarm",
    "dev": "nodemon app.js"
  },
  "repository": {
    "type": "git",
    "url": "https://git.notexpectedyet.com/NotExpectedYet/OctoFarm"
  },
  "keywords": [
    "octofarm",
    "octo",
    "octoprint",
    "pi",
    "node"
  ],
  "author": "James Mackay (NotExpectedYet)",
  "license": "ISC",
  "dependencies": {
    "JSONStream": "^1.3.5",
    "agenda": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "bunyan": "^1.8.12",
    "connect-flash": "^0.1.1",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.0",
    "express-session": "^1.17.0",
    "express-ws": "^4.0.0",
    "flatted": "^2.0.2",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.7",
    "node-fetch": "^2.6.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pm2": "^4.4.0",
    "remove": "^0.1.5",
    "request": "^2.88.2",
    "systeminformation": "^4.23.1",
    "tablefilter": "^0.7.0",
    "winston": "^3.2.1",
    "ws": "^7.2.3",
    "yieldable-json": "^2.0.0"
  },
  "devDependencies": {
    "debug": "^4.1.1",
    "dependency-check": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.2"
  },
  "nodemonConfig": {
    "verbose": false,
    "ignore": [
      "views/js/*",
      "logs/*"
    ],
    "delay": 2500
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 12.0.0",
    "npm": ">= 6.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    }
  },
  "config": {
    "imageRepo": "octofarm/octofarm",
    "imageName": "OctoFarm",
    "imagePort": "4000",
    "internalContainerPort": "4000"
  }
}
